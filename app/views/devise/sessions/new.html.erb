<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="modal-dialog">
  <div class="col-sm-12 main-section">
    <div class="modal-content">
      <div class="col-12 form">
        <form>
          <div class="form-group">
            <h5><%= "Please Login" %></h5>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter password" %>
          </div>

           <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me, class:"remember-me"%>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit "Login", class: "btn btn-success form-control" %>
          </div>
          <% end %>

          <div class="login-link">
          <%= render "devise/shared/links", class:"link" %>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
