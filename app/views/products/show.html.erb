<h1></h1>
<p id="notice"><%= notice %></p>

<div class="container-show">
  <div class="row">
    <div class="col-md-6 show-img">
      <%= image_tag(@product.image_url, class: "img-responsive", width: '100%') %>
    </div>

    <div class="col-md-6 description">
      <p><strong>Name:</strong>
      <%= @product.name %>
     </p>
     <p><i class="fas fa-info-circle"></i>
        <%= @product.description %>
     </p>

      <p><strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p><i class="fas fa-dollar-sign"></i>
        <%= @product.price %>
      </p>

       <strong>Average Rating:</strong>
       <div class='star-rating' data-score=<%= @product.average_rating_comment %>></div>

       <div class="strip-button">
         <%= form_with(url: '/payments/create') do |form| %>
         <%= render partial: "shared/stripe_checkout_button" %>
         <% end %>
      </div>
    </div>
  </div>
</div>



<div class="container-comments">
  <div class="row">
    <div class="col-md-6">
      <h4>Reviews</h4>
      <%= render 'comments' %>
    </div>
    <div class="col-md-6">
      <%= render 'new_comment' %>
    </div>
  </div>
</div>

<%= will_paginate @comments, previous_label: "Newer", next_label: "Older", inner_window: 1, outer_window: 0 %>

<div class="links show-link">
<%= link_to 'Edit', edit_product_path(@product), class:"btn btn-secondary" %> |
<%= link_to 'Back', products_path, class:"btn btn-info" %>
</div>
