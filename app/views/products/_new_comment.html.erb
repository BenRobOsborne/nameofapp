  <div class="container-review", id="new_review">
    <h5>Leave a review:</h5>
      <% if signed_in? %>
        <%= form_for([@product, @product.comments.build], remote: true) do |f| %>

          <div class="form-group">
            <label> Rating </label>
            <div class="rating" id='star-rating'></div>
          </div>

          <div class="form-group">
            <%= f.text_area :body,class: "form-control", placeholder: "Comment" %>
            <%= f.submit "Submit", class:"btn btn-success new-comment-btn" %>
          </div>
        <% end %>
      <% end %>
  </div>
