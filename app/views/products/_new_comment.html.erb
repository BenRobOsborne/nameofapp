<div class="container-fluid review">

<% if signed_in? %>
  <h5>Add a review:</h5>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %>
      <%= f.text_area :body %>
    </p>

      <p>Rating:</p>
      <div class="rating"></div>

      <p>
      <%= f.submit "Submit", class:"btn btn-info" %>
      </p>

    <% end %>
  <% end %>
</div>
