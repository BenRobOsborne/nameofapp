<div class="container review">

<% if signed_in? %>
  <h5>Add a review:</h5>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div id="comment-form">
    <label> Rating </label>
    <p>
      <%= f.label :body, "Comments" %>
      <%= f.text_area :body %>
      <%= f.submit "Submit", class:"btn btn-info" %>
    </p>
  
  </div>
  <% end %>
  <% end %>
</div>
