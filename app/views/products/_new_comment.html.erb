<% if signed_in? %>
  <h5>Add a review:</h5>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %>
      <%= f.text_area :body %><br>
      <%= f.label :body, "Rating" %>
      <%= f.number_field :rating, value: 1, min: 1, max: 5 %>
      <%= f.submit "Submit", class:"btn btn-info" %>
    </p>

     <div class="rating"></div>

  <% end %>
<% end %>
