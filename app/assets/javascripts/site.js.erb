$( document ).on('turbolinks:load', function() {
	refreshRating();
// Zoom Img for show page
	$('.img-zoom').elevateZoom();

});

var refreshRating = function() {
  $('#star-rating').raty({
      path: '/assets',
      scoreName: 'comment[rating]'
  });

    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });

  $('input[name="comment[rating]"]').attr('required', true);
}
